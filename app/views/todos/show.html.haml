%p#notice= notice

.row
  .col-md-9
    .panel.panel-primary
      .panel-heading
        %h3= @todo.name
      .panel-body
        %table.table
          %tr
            %td Name
            %td action
          - @todo.tasks.each do |i|
            %tr
              %td
                - if i.done==true
                  %del= i.name
                - else
                  = i.name
              - if i.done!=true
                %td= link_to "Done",done_path(@todo,i)
              - else


  .col-md-3
    = link_to 'Edit', edit_todo_path(@todo),class: 'btn btn-primary'

    = link_to 'Back', todos_path,class: 'btn btn-primary'


    = render 'tasks/form'
