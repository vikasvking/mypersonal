- if notice
  .alert.alert-info= notice

.row
  .col-md-9
    .panel.panel-primary
      .panel-heading
        %h3
          %span.glyphicon.glyphicon-paperclip

          = @todo.name
      .panel-body
        %table.table
          %tr
            %th Name
            %th action
            %th action
          - @todo.tasks.each do |i|
            %tr
              %td

                - if i.done==true
                  .span.glyphicon.glyphicon-ok
                  %del= i.name
                - else
                  %span.glyphicon.glyphicon-minus
                  = i.name
              - if i.done!=true
                %td
                  = link_to done_path(@todo,i),class: 'btn btn-info' do
                    %span.glyphicon.glyphicon-thumbs-up
                    Done
                %td= link_to 'delete',[@todo,i],method: :delete,data: {confirm: 'sure'},class: 'btn btn-danger'
              - else
                %td
                %td= link_to 'delete',[@todo,i],method: :delete,data: {confirm: 'sure'},class: 'btn btn-danger'
          - Currentaffair.all.each do |i|
            %tr
              - if i.todo==@todo.name
                - if i.done==true
                  %td
                    %span.glyphicon.glyphicon-ok
                    %del= i.name.strftime("%d-%m-%y")
                  %td
                  %td= link_to "delete",i,method: :delete,class: 'btn btn-danger'
                - else
                  %td
                    %span.glyphicon.glyphicon-minus
                    = i.name.strftime("%d-%m-%y")
                  %td
                    = link_to donecurrentaffairs_path(i) ,class: 'btn btn-info' do
                      %span.glyphicon.glyphicon-thumbs-up
                      Done
                  %td= link_to "delete",i,method: :delete,class: 'btn btn-danger'




  .col-md-3

    .row
      %button.btn.btn-primary.btn-md.btn-block{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"}
        History
    .row
      %button.btn.btn-primary.btn-md.btn-block{"data-target" => "#myModal2", "data-toggle" => "modal", :type => "button"}
        Geography
    .row
      %button.btn.btn-primary.btn-md.btn-block{"data-target" => "#myModal3", "data-toggle" => "modal", :type => "button"}
        Political science
    .row
      %button.btn.btn-primary.btn-md.btn-block{"data-target" => "#myModal4", "data-toggle" => "modal", :type => "button"}
        Economics
    .row
      %button.btn.btn-primary.btn-md.btn-block{"data-target" => "#myModal5", "data-toggle" => "modal", :type => "button"}
        Mechanical
    .row
      %button.btn.btn-primary.btn-md.btn-block{"data-target" => "#myModal6", "data-toggle" => "modal", :type => "button"}
        Aptitude

/ Modal
#myModal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
        %h4#myModalLabel.modal-title History
      .modal-body
        = render 'tasks/form'
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close


