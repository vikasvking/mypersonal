%p#notice= notice
.row
  .col-md-9
    - @todos.each_slice(3) do |i|
      .row
        .col-md-4
          - if i[0]!=nil
            .panel.panel-primary
              .panel-heading
                %h3= i[0].name
              .panel-body

                .progress
                  .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "#{(i[0].tasks.where(done: true).count*100)/(i[0].tasks.count)}", :role => "progressbar", :style => "width: #{(i[0].tasks.where(done: true).count*100)/(i[0].tasks.count)}%"}
                    = (i[0].tasks.where(done: true).count*100)/(i[0].tasks.count)
                    \%


              .panel-footer
                = link_to 'Show',i[0],class: 'btn btn-info'
                = link_to 'Edit',edit_todo_path(i[0]),class: 'btn btn-primary'
                = link_to 'Delete',i[0],method: :delete,data: {confirm: 'are you sure'},class: 'btn btn-danger'

        .col-md-4
          - if i[1]!=nil
            .panel.panel-primary
              .panel-heading
                = i[1].name
              .panel-body


                .progress
                  .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "#{(i[1].tasks.where(done: true).count*100)/(i[1].tasks.count)}", :role => "progressbar", :style => "width: #{(i[1].tasks.where(done: true).count*100)/(i[1].tasks.count)}%;"}
                    = (i[1].tasks.where(done: true).count*100)/(i[1].tasks.count)
                    \%
              .panel-footer
                = link_to 'Show',i[1],class: 'btn btn-info'
                = link_to 'Edit',edit_todo_path(i[1]),class: 'btn btn-primary'
                = link_to 'Delete',i[1],method: :delete,data: {confirm: 'are you sure'},class: 'btn btn-danger'
        .col-md-4




  .col-md-3




