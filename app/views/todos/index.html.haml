- if notice
  .alert.alert-info= notice
.row
  .col-md-9
    - @todos.each_slice(3) do |i|
      .row
        .col-md-4
          - if i[0]!=nil && i[0].tasks!=nil
            .panel.panel-primary
              .panel-heading
                %h3

                  = i[0].name
                  %span.glyphicon.glyphicon-pushpin
              .panel-body
                .progress
                  .progress-bar.progress-bar-striped.active{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "#{taskcounter(i[0])}", :role => "progressbar", :style => "width: #{taskcounter(i[0])}%"}
                    = taskcounter(i[0])
                    \%


              .panel-footer
                = link_to i[0],class: 'btn btn-info' do
                  %span.glyphicon.glyphicon-info-sign
                  Show
                = link_to edit_todo_path(i[0]),class: 'btn btn-primary' do
                  %span.glyphicon.glyphicon-wrench
                  edit
                = link_to i[0],method: :delete,data: {confirm: 'are you sure'},class: 'btn btn-danger' do
                  %span.glyphicon.glyphicon-remove-circle
                  Delete

        .col-md-4
          - if i[1]!=nil
            .panel.panel-primary
              .panel-heading
                %h3= i[1].name
              .panel-body


                .progress
                  .progress-bar.progress-bar-striped.active{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "#{taskcounter(i[1])}", :role => "progressbar", :style => "width: #{taskcounter(i[1])}%;"}
                    = taskcounter(i[1])
                    \%
              .panel-footer
                = link_to i[1],class: 'btn btn-info' do
                  %span.glyphicon.glyphicon-info-sign
                  Show
                = link_to edit_todo_path(i[1]),class: 'btn btn-primary' do
                  %span.glyphicon.glyphicon-wrench
                  edit
                = link_to i[1],method: :delete,data: {confirm: 'are you sure'},class: 'btn btn-danger' do
                  %span.glyphicon.glyphicon-remove-circle
                  Delete
        .col-md-4
          - if i[2]!=nil
            .panel.panel-primary
              .panel-heading
                %h3= i[2].name
              .panel-body


                .progress
                  .progress-bar.progress-bar-striped.active{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "#{taskcounter(i[2])}", :role => "progressbar", :style => "width: #{taskcounter(i[2])}%;"}
                    = taskcounter(i[2])
