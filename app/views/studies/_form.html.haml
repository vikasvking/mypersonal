= form_with(model: study) do |form|
  - if study.errors.any?
    #error_explanation
      %h2
        = pluralize(study.errors.count, "error")
        prohibited this study from being saved:
      %ul
        - study.errors.full_messages.each do |message|
          %li= message
  .form-group
    = form.label :subject
    = form.select :subject, ["History","Geography","Political Science","Economics","Mechanical"],prompt: 'select one',class: 'form-control'
  .form-group
    = form.label :book
    = form.text_field :book,class: 'form-control'
  .actions
    = form.submit
